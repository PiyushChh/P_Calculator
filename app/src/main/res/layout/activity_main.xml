<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_margin="20dp"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text=""
        android:layout_margin="50dp"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:text="0"
        android:gravity="right"
        android:layout_margin="10dp"/>
</LinearLayout>

    <LinearLayout
        style="@style/btnRow">

        <Button
            android:id="@+id/clear"
            style="@style/btnOper"
            android:text="AC">

        </Button>
        <Button
            android:id="@+id/back"
            style="@style/btnOper"
            android:drawableTop="@drawable/ic_baseline_backspace_24"
            android:drawableTint="@color/orange"
            android:gravity="center"
            android:paddingTop="28dp"
            >

        </Button>
        <Button
            android:id="@+id/percent"
            style="@style/btnOper"
            android:text="%">

        </Button>
        <Button
            android:id="@+id/divide"
            style="@style/btnOper"
            android:text="/">

        </Button>

    </LinearLayout>

    <LinearLayout
        style="@style/btnRow"
        >

        <Button
            android:id="@+id/seven"
            style="@style/btnNum"
            android:text="7">

        </Button>
        <Button
            android:id="@+id/eight"
            style="@style/btnNum"
            android:text="8">

        </Button>
        <Button
            android:id="@+id/nine"
            style="@style/btnNum"
            android:text="9">

        </Button>
        <Button
            android:id="@+id/mult"
            style="@style/btnOper"
            android:text="X">

        </Button>

    </LinearLayout>

    <LinearLayout
        style="@style/btnRow">

        <Button
            style="@style/btnNum"
            android:id="@+id/four"
            android:text="4">

        </Button>
        <Button
            android:id="@+id/five"
            style="@style/btnNum"
            android:text="5">

        </Button>
        <Button
            android:id="@+id/six"
            style="@style/btnNum"
            android:text="6">

        </Button>
        <Button
            android:id="@+id/minus"
            style="@style/btnOper"
            android:text="-">

        </Button>

    </LinearLayout>

    <LinearLayout
        style="@style/btnRow">

        <Button
            android:id="@+id/one"
            style="@style/btnNum"
            android:text="1">

        </Button>
        <Button
            style="@style/btnNum"
            android:id="@+id/two"
            android:text="2">

        </Button>
        <Button
            android:id="@+id/three"
            style="@style/btnNum"
            android:text="3">

        </Button>
        <Button
            android:id="@+id/plus"
            style="@style/btnOper"
            android:text="+">

        </Button>

    </LinearLayout>

    <LinearLayout
        style="@style/btnRow">


        <Button
            android:id="@+id/dot"
            style="@style/btnNum"
            android:text=".">

        </Button>
        <Button
            style="@style/btnNum"
            android:id="@+id/zero"
            android:text="0">

        </Button>
        <Button
            style="@style/btnNum"
            android:id="@+id/equal"
            android:layout_weight="2"
            android:background="@color/orange"
            android:text="=">

        </Button>

    </LinearLayout>
</LinearLayout>



